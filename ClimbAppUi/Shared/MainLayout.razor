@inherits LayoutComponentBase
@inject NavigationManager NavManager

<PageTitle>BlazorCRUD.UI</PageTitle>

<div class="page">
    @if (!IsLoginPage)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    bool IsLoginPage => NavManager.Uri.EndsWith("/");
}
