

<head>
    <link href="/css/styles.css" rel="stylesheet" />
</head>


@page "/home"
@inject NavigationManager NavigationManager

<PageTitle>Página de Inicio</PageTitle>

<div class="home-container">
    <div class="background-image" style="background-image: url('/images/tu_imagen_de_fondo.jpg');">
        <div class="overlay"></div>
    </div>
    <div class="content">
        <h1>Bienvenidos a Patones - Escalada Deportiva</h1>
        <p>Descubre la emoción y el desafío de la escalada en Patones, un lugar único para escaladores.</p>

        <div class="interactive-element">
            <button class="btn btn-primary" @onclick="RedirigirAFilmList">Lista de Vias emblemáticas visitadas</button>
            <!-- Agrega aquí otros elementos interactivos si es necesario -->
        </div>
    </div>
</div>

@code {
    private void RedirigirAFilmList()
    {
        NavigationManager.NavigateTo("/filmlist");
    }
}
