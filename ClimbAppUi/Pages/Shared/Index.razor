@page "/"
@inject NavigationManager NavigationManager
<style>
    .left-section {
        caret-color: transparent;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; 

    }

        .left-section img {
            height: auto;
            width: auto;
            max-width: 100%;
            max-height: 100%;
            border-radius: 50%; /* Hace que la imagen sea redonda */
            opacity: 0.2; /* Establece la opacidad al valor deseado */
        }
</style>

<div class="left-section" @onclick="NavigateToRegister">
    <img src="images/logoClimb.png" alt="Imagen de fondo" />
</div>

@code {

    private void NavigateToRegister()
    {
        NavigationManager.NavigateTo("/register");
    }
}
