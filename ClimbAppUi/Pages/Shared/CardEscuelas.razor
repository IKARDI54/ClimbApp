<!-- EscuelaCard.razor -->

<div class="escuela-card">
    <img src="@ImagenUrl" alt="@NombreEscuela" />
    <h3>@NombreEscuela</h3>
    <p>@Descripcion</p>
</div>

<style>
    .escuela-card {
        border: 1px solid #ccc;
        padding: 20px;
        margin: 10px;
        width: 300px;
        text-align: center;
    }

        .escuela-card img {
            max-width: 100%;
            height: auto;
        }
</style>

@code {
    [Parameter] public string NombreEscuela { get; set; }
    [Parameter] public string ImagenUrl { get; set; }
    [Parameter] public string Descripcion { get; set; }
}
